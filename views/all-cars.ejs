<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Cars</title>

    <link rel="stylesheet" href="/car-list.css" />
  </head>
  <body>
    <%- include('./partials/nav') %>
    <hr />
    <div class="header">
      <span class="make"><h3>Make</h3></span>
      <span class="model"><h3>Model</h3></span>
      <span class="year"><h3>Year</h3></span>
    </div>

    <% cars.forEach(car => { %>
    <div class="car">
      <span class="make"><%= car.make %></span>
      <span class="model"><%= car.model %></span>
      <span class="year"><%= car.year %></span>
      <a href="/cars/<%=car._id%>"><button>See Details</button></a>
    </div>
    <% }) %>

    <a href="/cars/new"><button class="btn2">Add Car</button></a>
  </body>
</html>
